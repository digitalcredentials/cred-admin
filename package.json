{
  "name": "cred-admin",
  "description": "Server for managing issuances of academic verifiable credentials",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "node build.js && tsc --build tsconfig.prod.json",
    "lint": "eslint --fix './**/*.ts'",
    "start": "until sequelize-cli --config .sequelize.js db:migrate; do sleep 1; done && until sequelize-cli --config .sequelize.js db:seed:all; do sleep 1; done && node -r module-alias/register ./dist",
    "start:dev": "nodemon"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "exec": "ts-node -r tsconfig-paths/register ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digitalcredentials/cred-admin.git"
  },
  "_moduleAliases": {
    "@models": "dist/models",
    "@entities": "dist/entities",
    "@shared": "dist/shared",
    "@server": "dist/Server"
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/uuid": "^8.3.0",
    "bcrypt": "^5.0.0",
    "command-line-args": "^5.1.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-joi-validation": "^5.0.0",
    "helmet": "^3.12.1",
    "http-status-codes": "^2.1.4",
    "joi": "^17.3.0",
    "jsonfile": "^6.0.1",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^8.4.1",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.3.5",
    "sequelize-cli": "^6.2.0",
    "sequelize-typescript": "^2.0.0",
    "swagger-express-typescript": "^1.0.2",
    "swagger-ui-dist": "^3.35.0",
    "tslib": "^2.0.1",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.32",
    "@types/command-line-args": "^5.0.0",
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.8",
    "@types/find": "^0.2.1",
    "@types/helmet": "0.0.37",
    "@types/jasmine": "^3.5.14",
    "@types/jsonfile": "^6.0.0",
    "@types/lodash": "^4.14.161",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.11.2",
    "@types/passport": "^1.0.4",
    "@types/passport-jwt": "^3.0.3",
    "@types/supertest": "^2.0.10",
    "@types/validator": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "find": "^0.3.0",
    "fs-extra": "^9.0.1",
    "jasmine": "^3.6.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "sequelize-typescript-migration": "0.0.1-beta.3",
    "supertest": "^4.0.2",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.3"
  }
}
